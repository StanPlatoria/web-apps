<style>
  body {
    margin: 0;
  }

  .disco {
    position: relative;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    font-size: 4rem;
    white-space: nowrap;
    text-align: center;
  }

  .disco span {
    display: inline-block;
    animation: strobe 1s infinite steps(1);
  }

  # @keyframes strobe {
  #   0%   { color: red;     opacity: 1; }
